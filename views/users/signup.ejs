<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on NomadTraveller</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="for-label" type="text">Username</label>
                <input name="username" type="text" id="username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            <div>
            <div class="mb-3">
                <label for="email" class="for-label" type="text">Email</label>
                <input name="email" type="email" id="email" class="form-control" required>
            <div>
            <div class="mb-3">
                <label for="password" class="for-label" type="text">Password</label>
                <input name="password" type="password" id="password" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            <div>
                <br>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>